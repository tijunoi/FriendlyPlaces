<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme.SlideUpTransition" parent="AppTheme">
        <item name="android:windowEnterTransition">@android:transition/slide_bottom</item>
    </style>


    <style name="AppTheme.Translucent"
        parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="UpBackArrowIconWhite" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorControlNormal">@color/icons</item>
        <item name="android:titleTextColor">@color/icons</item>
    </style>

    <style name="SpinnerWhite" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:textColor">@color/icons</item>
    </style>
</resources>